<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sky"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HangmanActivity"
    android:gravity="center_vertical">

    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:src="@drawable/hangman6"
        android:minWidth="500dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:minHeight="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/HangmanWord"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/reset"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:onClick="reset"
        android:background="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORFEIT"
        android:id="@+id/Answer"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:onClick="getAnswer"
        android:background="#FFFFFF" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reset"
        android:columnCount="8"
        android:rowCount="4"
        android:id="@+id/gridLayout"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="a"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="buttonClicked" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="b"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="buttonClicked" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="c"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="d"
            android:id="@+id/button4"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="e"
            android:id="@+id/button5"
            android:layout_row="0"
            android:layout_column="4"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="f"
            android:id="@+id/button6"
            android:layout_row="0"
            android:layout_column="5"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="g"
            android:id="@+id/button7"
            android:layout_row="0"
            android:layout_column="6"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="h"
            android:id="@+id/button8"
            android:layout_row="0"
            android:layout_column="7"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="i"
            android:id="@+id/button9"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="j"
            android:id="@+id/button10"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="k"
            android:id="@+id/button11"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="l"
            android:id="@+id/button12"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="m"
            android:id="@+id/button13"
            android:layout_row="1"
            android:layout_column="4"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="n"
            android:id="@+id/button14"
            android:layout_row="1"
            android:layout_column="5"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="o"
            android:id="@+id/button15"
            android:layout_row="1"
            android:layout_column="6"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="p"
            android:id="@+id/button16"
            android:layout_row="1"
            android:layout_column="7"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="q"
            android:id="@+id/button17"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="r"
            android:id="@+id/button18"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="s"
            android:id="@+id/button20"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="t"
            android:id="@+id/button21"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="u"
            android:id="@+id/button22"
            android:layout_row="2"
            android:layout_column="4"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="v"
            android:id="@+id/button23"
            android:layout_row="2"
            android:layout_column="5"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="w"
            android:id="@+id/button24"
            android:layout_row="2"
            android:layout_column="6"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="x"
            android:id="@+id/button25"
            android:layout_row="2"
            android:layout_column="7"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="y"
            android:id="@+id/button26"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="z"
            android:id="@+id/button27"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="buttonClicked"/>


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Default scoreboard"
        android:id="@+id/Guesses"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

</RelativeLayout>
